{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "lib": ["ES2020"],
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "jsx": "preserve",
    "paths": {
      "valdi_core/*": ["../Valdi/src/valdi_modules/src/valdi/valdi_core/*"],
      "valdi_tsx/*": ["../Valdi/src/valdi_modules/src/valdi/valdi_tsx/*"],
      "valdi_navigation/*": ["../Valdi/src/valdi_modules/src/valdi/valdi_navigation/*"],
      "valdi_coreutils/*": ["../Valdi/src/valdi_modules/src/valdi/valdi_coreutils/*"],
      "valdi_http/*": ["../Valdi/src/valdi_modules/src/valdi/valdi_http/*"],
      "valdi_persistence/*": ["../Valdi/src/valdi_modules/src/valdi/valdi_persistence/*"]
    }
  },
  "include": ["modules/**/*.ts", "modules/**/*.tsx"],
  "exclude": ["node_modules", "bazel-*"]
}
