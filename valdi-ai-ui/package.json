{
  "name": "valdi-ai-ui",
  "version": "1.0.0",
  "description": "Open Source Cross-Platform AI Chat Client built with Valdi and Vercel AI SDK v5",
  "private": true,
  "scripts": {
    "prepare": "husky install",
    "build": "bazel build //:valdi_ai_ui",
    "build:ios": "npm run build && node vendor/valdi/npm_modules/cli/dist/index.js install ios --app=//:valdi_ai_ui",
    "build:android": "npm run build && node vendor/valdi/npm_modules/cli/dist/index.js install android --app=//:valdi_ai_ui",
    "valdi": "node vendor/valdi/npm_modules/cli/dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:bazel": "bazel test //...",
    "test:ci": "jest --ci --coverage --maxWorkers=2",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "lint:staged": "lint-staged",
    "type-check": "tsc --noEmit",
    "type-check:watch": "tsc --noEmit --watch",
    "format": "prettier --write \"**/*.{ts,tsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,json,md}\"",
    "validate": "npm run type-check && npm run lint && npm run test",
    "validate:all": "npm run type-check && npm run lint && npm run test:coverage && npm audit --audit-level=high",
    "validate:quick": "npm run type-check && npm run lint",
    "audit:fix": "npm audit fix",
    "clean": "bazel clean",
    "clean:full": "bazel clean --expunge && rm -rf node_modules coverage"
  },
  "keywords": [
    "valdi",
    "ai",
    "chatbot",
    "ai-sdk",
    "cross-platform",
    "mobile",
    "ios",
    "android",
    "typescript",
    "react-native-alternative"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "@ai-sdk/openai": "^1.0.0",
    "@ai-sdk/anthropic": "^1.0.0",
    "@ai-sdk/google": "^1.0.0",
    "ai": "^5.0.0",
    "zod": "^3.24.1",
    "date-fns": "^4.1.0",
    "uuid": "^11.0.3"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/node": "^22.10.0",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.16.0",
    "@typescript-eslint/parser": "^8.16.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jest": "^28.8.3",
    "husky": "^9.1.5",
    "jest": "^29.7.0",
    "jest-environment-node": "^29.7.0",
    "lint-staged": "^15.2.10",
    "prettier": "^3.1.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{json,md,yaml,yml}": [
      "prettier --write"
    ]
  }
}
