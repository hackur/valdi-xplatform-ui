{
  "compilerOptions": {
    /* Language and Environment */
    "target": "ES2022",
    "lib": ["ES2022"],
    "jsx": "react",
    "jsxFactory": "$createElement",
    "jsxFragmentFactory": "$Fragment",

    /* Modules */
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,

    /* Type Checking - Maximum Strictness (2025 Best Practices) */
    "strict": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,

    /* Additional Strictness (2025 Recommendations) */
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "exactOptionalPropertyTypes": false,
    "noPropertyAccessFromIndexSignature": false,
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,

    /* Linting */
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "forceConsistentCasingInFileNames": true,

    /* Emit */
    "noEmit": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "isolatedModules": true,

    /* Interop Constraints */
    "skipLibCheck": true,

    /* Path Mapping */
    "baseUrl": ".",
    "paths": {
      "@common": ["./modules/common/src/index.ts"],
      "@common/*": ["./modules/common/src/*"],
      "@common/types": ["./modules/common/src/types/index.ts"],
      "@common/theme": ["./modules/common/src/theme/index.ts"],
      "@common/components": ["./modules/common/src/components/index.ts"],
      "@common/schemas": ["./modules/common/src/schemas/index.ts"],
      "@common/utils": ["./modules/common/src/utils/index.ts"],
      "@chat_core": ["./modules/chat_core/src/index.ts"],
      "@chat_core/*": ["./modules/chat_core/src/*"],
      "@chat_ui": ["./modules/chat_ui/src/index.ts"],
      "@chat_ui/*": ["./modules/chat_ui/src/*"],
      "@agent_manager": ["./modules/agent_manager/src/index.ts"],
      "@agent_manager/*": ["./modules/agent_manager/src/*"],
      "@conversation_manager": ["./modules/conversation_manager/src/index.ts"],
      "@conversation_manager/*": ["./modules/conversation_manager/src/*"],
      "@model_config": ["./modules/model_config/src/index.ts"],
      "@model_config/*": ["./modules/model_config/src/*"],
      "@tools_demo": ["./modules/tools_demo/src/index.ts"],
      "@tools_demo/*": ["./modules/tools_demo/src/*"],
      "@workflow_demo": ["./modules/workflow_demo/src/index.ts"],
      "@workflow_demo/*": ["./modules/workflow_demo/src/*"],
      "@settings": ["./modules/settings/src/index.ts"],
      "@settings/*": ["./modules/settings/src/*"]
    }
  },
  "include": ["modules/**/*.ts", "modules/**/*.tsx"],
  "exclude": [
    "node_modules",
    "bazel-*",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/dist",
    "**/build"
  ]
}
